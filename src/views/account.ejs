<%- include('parts/header') %>
<% var user %>  
<div class="navbar-area">
    <div class="main-responsive-nav">
        <div class="container">
            <div class="main-responsive-menu">
                <div class="logo">
                    <a href="index.html">
                        <img src="assets/img/logo.png" alt="image">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="main-navbar">
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-light">
            <a class="navbar-brand" href="index.html">
                <img src="/assets/img/logo.png" alt="image">
            </a>

            <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" class="nav-link">
                            Home 
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/account" class="nav-link d-flex align-items-center">
                            <i class="fas fa-user-circle" style="font-size: x-large;"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/exit" class="nav-link d-flex align-items-center">
                            Exit
                        </a>
                    </li>
                </ul>
                
                <div class="others-options d-flex align-items-center">
                    <div class="option-item">
                        <div class="cart-btn">
                            <a href="/cart">
                                <i class='flaticon-shopping-cart'></i>
                                <span id="cart-count">0</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>
<div class="page-banner-area item-bg2">
    <div class="d-table">
        <div class="d-table-cell">
            <div class="container">
                <div class="page-banner-content">
                    <h2><%= user.fullName %> Welcome to Account</h2>
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>Account</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<h1 class="text-center pt-4 mt-3">Your Orders</h1>

<section class="cart-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="cart-table table-responsive">
                    <table class="table table-bordered">
                         <thead>
                             <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Name</th>
                                <th scope="col">Unit Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                             </tr>
                         </thead>
                         <tbody id="card-table-body">

                         </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="cart-totals">
            <h3>Orders Totals</h3>
            <ul>
                <li>Subtotal 
                    <span id="subTotal">$0.0</span>
                </li>
                <li>Shipping 
                    <span>$30.00</span>
                </li>
                <li>Total 
                    <span id="total">$0.0</span>
                </li>
            </ul>
        </div>
    </div>
</section>
<script>
let cartCount = document.querySelector("#cart-count");
let cart = JSON.parse(window.localStorage.getItem('cart'));
cartCount.textContent = cart.length;
</script>

<script src="/js/account.js"></script>
</body>
</html>