<%- include('../parts/header')  %> 
   <section class="admin">
      <section class="site-main d-flex align-items-center flex-column" style="position: fixed;">
           <h1 class="heading py-4"><img src="/images/logo.svg" alt="logo" > Dashboard Orgo</h1>

           <nav class="mt-3 w-100 ">
              <ul class="list-group">
               <li class="admin-item px-4 py-3 border-bottom">
                  <a href="/admin/products">
                     <i class="fab fa-product-hunt"></i> Products
                  </a>
               </li>
               <li class="admin-item px-4 py-3 border-bottom">
                  <a href="/products">
                     <i class="fas fa-plus"></i> Add Product
                  </a>
               </li>
              </ul>
           </nav>
      </section>

      <main class="admin-main" style="position: relative; margin-left: 20vw;" >
          <header class="d-flex px-3 border-bottom border-light py-2">
             <h2>Add Product</h2>

             <div class="admin-box d-flex align-items-center ">
                <h5 class="mx-3">Admin</h5>
                <img src="/images/avatar2.png" alt="" width="50" height="50" style="border-radius: 50%;">
             </div>
          </header>


          <form class='col-8 col-md-6 col-lg-5 mx-auto  pt-5' id="Product"> 
             <h1>Add Product</h1>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Name</label>
                <input type="Text" class="form-control name" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Product Name"  autocomplete="off" required>
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Price</label>
                <input type="number" class="form-control price" id="exampleInputPassword1" placeholder="Price"  autocomplete="off" required>
              </div>
              <div class="mb-3">
               <label for="exampleInputPassword1" class="form-label">Img Url</label>
               <input type="url" class="form-control imgUrl" id="exampleInputPassword1" placeholder="Img Url"  autocomplete="off" required>
             </div>
             <div class="mb-3">
               <label for="exampleInputPassword1" class="form-label">Categories</label>
               <select name="category"  class="form-select border"  autocomplete="off" required id="categories">
                  <option value="1">Apple</option>
                  <option value="2">Samsung</option>
                  <option value="3">Xiaomi</option>
                  <option value="4">Kitoblar</option>
               </select>
             </div>
                <button class="btn btn-primary w-100">Add</button>
          </form>
          <div class="result2">
             added product
          </div>
      </main>
   </section>

   <script src="/js/addProduct.js"></script>
<%- include('../parts/footer')  %> 