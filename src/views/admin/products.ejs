<%- include('../parts/header') %>
<section class="d-flex admin">
    <section
        class="site-main d-flex align-items-center flex-column"
        style="position: fixed"
    >
        <h1 class="heading py-4">
            <img src="/images/logo.svg" alt="logo" /> Dashboard Orgo
        </h1>
        <nav class="mt-3 w-100">
            <ul class="list-group">
                <li class="admin-item px-4 py-3 border-bottom">
                    <a href="/admin/users">
                        <i class="fas fa-user-tie"></i> Users
                    </a>
                </li>
                <li class="admin-item px-4 py-3 border-bottom">
                    <a href="/admin/products">
                        <i class="fab fa-product-hunt"></i> Products
                    </a>
                </li>
                <li class="admin-item px-4 py-3 border-bottom">
                    <a href="/admin/addproduct">
                        <i class="fas fa-plus"></i> Add Product
                    </a>
                </li>
            </ul>
        </nav>
    </section>

    <main class="admin-main" style="margin-left: 20vw">
        <header class="d-flex px-3 border-bottom border-light py-2">
            <h2>Products</h2>

            <div class="admin-box d-flex align-items-center">
                <h5 class="mx-3">Admin</h5>
                <img
                    src="/images/avatar2.png"
                    alt=""
                    width="50"
                    height="50"
                    style="border-radius: 50%"
                />
            </div>
        </header>
        <!-- Rander Products -->
        <section class="categories">
            <ul class="list-categories">
               <li class="categories-item" id="all">All</li>
                <li class="categories-item" data-value="1">Apple</li>
                <li class="categories-item" data-value="2">Samsung</li>
                <li class="categories-item" data-value="3">Xiaomi</li>
                <li class="categories-item" data-value="4">Kitoblar</li>
            </ul>
        </section>
        <section class="products px-3">
            <div class="row w-100" id="products-box"></div>
        </section>
    </main>
</section>


  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        </div>
        <div class="modal-body">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Image Url</label>
                <input type="url" class="form-control" id="img-url" aria-describedby="emailHelp" placeholder="Img Url" autocomplete="off">
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Price</label>
                <input type="number" class="form-control price-input" id="exampleInputPassword1" placeholder="Product Price" required autocomplete="off">
              </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="save-changes">Save changes</button>
        </div>
      </div>
    </div>
  </div>
 
  <!-- Modal -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Do you want to delete it?</h5>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          <button type="button" class="btn btn-primary" id="deleteEl">Yes</button>
        </div>
      </div>
    </div>
  </div>
<script src="/js/adminProducts.js"></script>
<%- include('../parts/footer') %>
